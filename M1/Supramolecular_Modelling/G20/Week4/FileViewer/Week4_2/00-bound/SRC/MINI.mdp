; Run parameters
integrator	        = steep         	; minimization with steepest descent method
emtol                   = 100           	; stop minimization when the maximum force < 100.0 kJ/mol/nm
emstep                  = 0.01          	; energy step size
nsteps                  = 1000          	; maximum number of (minimization) steps to perform
continuation            = no			; first dynamics run?
; Output control
nstxout		        = 100  			; save coordinates every 1 step
nstenergy	        = 100  			; save energies every 1 step
nstlog		        = 100  			; update log file every 1 step
; Bond parameters
constraints	        = h-bonds		; h-bonds constrained
constraint_algorithm    = lincs	        	; holonomic constraints 
lincs_iter	        = 1	        	; accuracy of LINCS
lincs_order	        = 4	        	; also related to accuracy
; Neighbor searching
cutoff-scheme           = Verlet        	; scheme to make the neighbor searching
ns_type		        = grid			; search neighboring grid cells
nstlist		        = 20			; 20 fs, largely irrelevant with Verlet
; Electrostatics interactions
coulombtype             = PME           	; PME for treating electrostatic 
rcoulomb	        = 1.2			; short-range electrostatic cutoff (in nm)
; Vdw interactions 
vdw-type                = cut-off           	; PME for computing van der waals interactions
rvdw		        = 1.2			; short-range van der Waals cutoff (in nm)
vdw-modifier    	= force-switch
rlist           	= 1.2
rvdw-switch     	= 1.0
DispCorr        	= no
; PME details 
fourierspacing          = 0.12          	; grid spacing for FFT
pme_order               = 4            		; Spline order of 4
ewald_rtol              = 1e-06         	; Tolerance of 1e-06 for PME in electrostatics
ewald_rtol-lj           = 1e-06         	; Tolerance of 1e-06 for PME in VdW
; Periodic boundary conditions
pbc		        = xyz	        	; 3-D PBC
